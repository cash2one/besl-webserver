server{
        listen          8000;
        server_name     res.joyme.dev;
        index           index.htm index.html;
        root            @NGINX_UPLOADS_ROOT@/upload;

        fastcgi_intercept_errors    on;
        error_page  403                http://www.joyme.dev/404.htm;
        error_page  500                http://www.joyme.dev/500.htm;
        error_page 302 403 502 = http://www.joyme.dev/;

        location ~ .*\.(gif|jpg|jpeg|png|bmp|swf|JPG|JPEG|PNG)$ {
            expires      30d;
        }

        location ~ .*\.(js|css)?$ {
            expires      1h;
        }

        location /crossdomain.xml {
            root @NGINX_HTDOCS_ROOT@;
        }

        location /version.txt {
            root @NGINX_HTDOCS_ROOT@;
        }

        location  /res {
            index index.jsp;

            proxy_pass  http://res_server_pool/res;

            proxy_redirect           off;
            proxy_set_header         Host            $host;
            proxy_set_header         X-Real-IP       $remote_addr;
            proxy_set_header         X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header         access_token    $http_access_token;

            client_max_body_size     10m;
            client_body_buffer_size  256k;

            proxy_connect_timeout    300;
            proxy_send_timeout       300;
            proxy_read_timeout       300;
            proxy_buffers            32 8k;
        }

        access_log @NGINX_ROOT@/logs/access_res.log joyme;
    }